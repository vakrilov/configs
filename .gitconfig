[user]
  name = vakrilov
  email = alexander.vakrilov@telerik.com

[push]
  default = tracking

[color]
  diff = auto
  status = auto
  branch = auto
[format]
  pretty = %Cblue%h%Creset %Cgreen[%cr]%Creset (%an) %s

[alias]
  c = commit -m
  ch = cherry-pick
  co = checkout
  a = add
  d = diff
  dic = diff --cached
  ps = push
  s = status
  out = log origin..HEAD
  l = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %Cblue%an%Creset' --abbrev-commit --date=relative
  ca = commit --amend
  catchup = "!git fetch origin; git rebase origin/master"

  sub = submodule update --init
  cl = clean -xfd

  # Other
  unstage = reset HEAD
  staged = diff --cached

[branch]
  autosetuprebase = always
