// Place your settings in this file to overwrite the default settings
{
    "workbench.welcome.enabled": false,
    "explorer.openEditors.visible": 0,
    "search.exclude": {
        "**/node_modules": true,
        "**/node_modules/tns-core-modules": false,
        "**/node_modules/nativescript-angular": false,
        "**/bower_components": true,
        "**/platforms": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/*.js.map": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.metadata.json": true,        
        "**/*.ngsummary.json": true,
        "**/*.ngfactory.ts": true
    },
    "editor.minimap.enabled": true,
    "editor.minimap.showSlider": "always",
    "window.zoomLevel": 1,
    "cSpell.userWords": [
        "Affine",
        "Appium",
        "Backend",
        "Boldy",
        "Bootstrapper",
        "ITEMSLOADING",
        "Injectable",
        "Livesync",
        "Semibold",
        "Subview",
        "autocapitalization",
        "cocoapod",
        "codelyzer",
        "componentless",
        "containee",
        "devtools",
        "entrypoint",
        "flexbox",
        "geolocation",
        "interop",
        "lifecycle",
        "minimap",
        "monospace",
        "ngtools",
        "polyfills",
        "repo",
        "scrollable",
        "signup",
        "subviews",
        "superview",
        "testsuite",
        "testsuites",
        "transpiled",
        "typedoc"
    ],
    "typescript.implementationsCodeLens.enabled": true,
    "workbench.iconTheme": "vscode-great-icons",
    "typescript.check.tscVersion": false,
    "editor.wordWrap": "on",
    "terminal.external.osxExec": "iTerm.app",
    "editor.showFoldingControls": "always",
    "editor.multiCursorModifier": "ctrlCmd",
    "extensions.ignoreRecommendations": true,
    "prettier.tabWidth": 4,
    "prettier.trailingComma": "es5",
    "prettier.printWidth": 120
}
